<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.AdicionarColaboradorFragment"
    android:background="?attr/colorSurface">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/linear_progress_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:indicatorColor="@color/brand_cyan"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textView"
        style="@style/TextAppearance.App.Headline6"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginHorizontal="@dimen/dimen_medium"
        android:gravity="center"
        android:text="@string/label_adicionar_colaborador"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_voltar"
        android:layout_width="@dimen/dimen_big"
        android:layout_height="@dimen/dimen_big"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:src="@drawable/ic_back"
        android:layout_marginStart="@dimen/dimen_medium"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <ViewFlipper
        android:id="@+id/vf_formulario"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dimen_medium"
        app:layout_constraintBottom_toTopOf="@+id/btn_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:layout_marginHorizontal="@dimen/dimen_big"
        android:inAnimation="@anim/slide_in_right"
        android:outAnimation="@anim/slide_out_left">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.App.Headline4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_normal"
                android:text="@string/label_digitar_matricula_info" />

            <EditText
                android:id="@+id/et_matricula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/label_matricula" />

            <TextView
                style="@style/TextAppearance.App.Subtitle2"
                android:layout_marginTop="@dimen/dimen_medium"
                app:drawableStartCompat="@drawable/ic_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/brand_red"
                app:drawableTint="@color/brand_red"
                android:drawablePadding="@dimen/dimen_normal"
                android:text="@string/label_atencao_digitar_matricula_info"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.App.Headline4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_normal"
                android:text="@string/label_digitar_nome_info" />

            <EditText
                android:id="@+id/et_nome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textCapWords"
                android:hint="@string/label_nome_completo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.App.Headline4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_medium"
                android:layout_marginVertical="@dimen/dimen_normal"
                android:text="@string/label_qual_funcao_colaborador_info" />

            <RadioGroup
                android:id="@+id/rg_funcao"
                android:checkedButton="@+id/radio_button_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/rb_motorista"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:fontFamily="@font/my_poppins_font"
                    android:text="@string/label_motorista"/>
                <RadioButton
                    android:id="@+id/tb_ajudante"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:fontFamily="@font/my_poppins_font"
                    android:text="@string/label_ajudante"/>

            </RadioGroup>

        </LinearLayout>

    </ViewFlipper>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_cadastrar"
        android:src="@drawable/ic_next"
        app:tint="?attr/colorOnPrimary"
        app:backgroundTint="?attr/colorPrimary"
        android:layout_margin="@dimen/dimen_medium"
        android:contentDescription="@string/label_proximo_description" />

    <Button
        android:id="@+id/btn_cadastrar"
        style="@style/Theme.Button.Confirmar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_cadastrar_colaborador"
        android:layout_marginStart="-8dp"
        android:layout_marginEnd="-8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>