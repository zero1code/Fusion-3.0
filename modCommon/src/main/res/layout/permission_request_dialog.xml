<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bottom_sheet_layout"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_gravity="center_vertical"
        android:animateLayoutChanges="true">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_icone"
            android:layout_width="@dimen/dimen_super"
            android:layout_height="@dimen/dimen_super"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_title"
            app:srcCompat="@drawable/ic_cancel_rounded"/>

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextAppearance.App.Headline5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dimen_medium"
            android:paddingVertical="@dimen/dimen_normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_message"
            android:text="Nenhuma carga encontrada." />

        <TextView
            android:id="@+id/tv_message"
            style="@style/TextAppearance.App.Subtitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dimen_medium"
            android:paddingVertical="@dimen/dimen_normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Se quiser utilizar apenas a jornada de trabalho, clique no botão abaixo." />

        <Button
            style="@style/Theme.Button.Confirmar"
            android:id="@+id/btn_aceitar_permissao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jornada de trabalho"
            android:layout_marginHorizontal="@dimen/dimen_medium"
            android:layout_marginVertical="@dimen/dimen_normal"
            app:layout_constraintTop_toBottomOf="@id/tv_message"/>
        <Button
            style="@style/Theme.Button.Normal.Outlined"
            android:id="@+id/btn_configuracoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ir para configurações"
            android:layout_marginHorizontal="@dimen/dimen_medium"
            android:layout_marginVertical="@dimen/dimen_normal"
            app:layout_constraintTop_toBottomOf="@id/btn_aceitar_permissao"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
