<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.PrimeiroAcessoFragment"
    android:background="?attr/colorSurface">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/linear_progress_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:indicatorColor="@color/brand_cyan"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ViewFlipper
        android:id="@+id/vf_formulario"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/dimen_medium"
        app:layout_constraintBottom_toTopOf="@+id/btn_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="@dimen/dimen_medium"
        android:inAnimation="@anim/slide_in_right"
        android:outAnimation="@anim/slide_out_left">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.App.Headline4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_normal"
                android:text="@string/label_digitar_id_empresa_info" />

            <EditText
                android:id="@+id/et_empresa_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_id_empresa"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.App.Headline4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_normal"
                android:text="@string/label_digitar_matricula_info" />

            <EditText
                android:id="@+id/et_matricula"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:hint="@string/label_matricula" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.App.Headline4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_medium"
                android:layout_marginVertical="@dimen/dimen_normal"
                android:text="@string/label_qual_funcao_colaborador_info" />

            <RadioGroup
                android:id="@+id/rg_funcao"
                android:checkedButton="@+id/radio_button_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_medium">
                <RadioButton
                    android:id="@+id/rb_motorista"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:fontFamily="@font/my_poppins_font"
                    android:text="@string/label_motorista"
                    android:textSize="@dimen/big_text"/>
                <RadioButton
                    android:id="@+id/tb_ajudante"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:fontFamily="@font/my_poppins_font"
                    android:text="@string/label_ajudante"
                    android:textSize="@dimen/big_text"/>

            </RadioGroup>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextAppearance.App.Headline5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_medium"
                android:layout_marginVertical="@dimen/dimen_normal"
                android:text="@string/label_tirar_foto_rosto_info" />

            <TextView
                android:id="@+id/tv_step1"
                style="@style/TextAppearance.App.Subtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_medium"
                android:layout_marginVertical="@dimen/dimen_normal"
                android:text="1. Esteja em um ambiente bem iluminado."
                android:layout_below="@id/tv_title"/>
            <TextView
                android:id="@+id/tv_step2"
                style="@style/TextAppearance.App.Subtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_medium"
                android:layout_marginVertical="@dimen/dimen_normal"
                android:text="2. Remova qualquer acessório que estiver em seu rosto."
                android:layout_below="@id/tv_step1"/>
            <TextView
                android:id="@+id/tv_step3"
                style="@style/TextAppearance.App.Subtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_medium"
                android:layout_marginVertical="@dimen/dimen_normal"
                android:text="3. Alinhe seu rosto na indicação que será exibida na tela."
                android:layout_below="@id/tv_step2"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_tirar_foto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_tirar_foto_rosto"
                android:layout_marginTop="@dimen/dimen_medium"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </ViewFlipper>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_cadastrar"
        android:src="@drawable/ic_next"
        app:tint="?attr/colorOnPrimary"
        app:backgroundTint="?attr/colorPrimary"
        android:layout_margin="@dimen/dimen_medium"
        android:contentDescription="@string/label_proximo_description" />

    <Button
        android:id="@+id/btn_cadastrar"
        style="@style/Theme.Button.Confirmar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_cadastrar_colaborador"
        android:layout_marginStart="-8dp"
        android:layout_marginEnd="-8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>